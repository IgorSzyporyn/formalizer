{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@formalizer/components": ["libs/shared/components/src/index.ts"],
      "@formalizer/core": ["libs/core/src/index.ts"],
      "@formalizer/designer": ["libs/designer/src/index.ts"],
      "@formalizer/hooks": ["libs/shared/hooks/src/index.ts"],
      "@formalizer/models": ["libs/shared/ui-models/src/index.ts"],
      "@formalizer/react": ["libs/extensions/react/src/index.ts"],
      "@formalizer/theme": ["libs/shared/theme/src/index.ts"],
      "@formalizer/ui-models": ["libs/shared/ui-models/src/index.ts"],
      "@formalizer/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
